



<table class="table table-hover table-sm toping">

    <% @users.each do |u| %>

    <tr>
        <td>
            <div class="info_created_at">
                <%= u.created_at.strftime('%Y/%m/%d') %>に登録
            </div>

            <div class="index-title">
                <%= u.name %>
            </div>
            <% end %>
            <div class="tag">
                <%= u.email %>
            </div>
            <%= link_to "復元", admins_user(u), method: :patch, "data-confirm" => "復元するよ？" %><br/ >
            <%= link_to "削除", admins_user(u), method: :delete, "data-confirm" => "削除するよ？" %>
        </td>
    </tr>

    <% end %>

</table>
<%= paginate @users %>
</div>