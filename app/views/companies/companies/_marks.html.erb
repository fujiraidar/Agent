

<% if marks.exists? %>

<table class="table table-hover table-sm toping">

	<% marks.each do |m| %>

	<% e = Engineer.find_by(id: m.engineer_id) %>

    <tr class="row">
		<td class="col-md-1"><%= attachment_image_tag e, :profile_image, fallback: "no_image.jpg", size:"60x60" %></td>
		<td class="col-md-10">
			<div class="info_created_at">
				<%= m.created_at.strftime('%Y/%m/%d') %>にマークされました。
			</div>
			<%= link_to engineer_path(e) do %>
			  <div class="index-title">
			    <%= e.surname %> <%= e.name %>
			  </div>
			<% end %>
			<% if company_signed_in? %>
			<% if m.company_id == current_company.id %>
			<div class="info_created_at tag">
		        ・<%= e.age %>歳 <%= e.rank %>ランク
		    </div>
		    <% end %>
		    <% end %>
		</td>
	</tr>
	<% end %>
</table>

<% else %>

<strong>no mark</strong>

<p>マークがありません</p>

<% end %>