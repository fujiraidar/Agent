

<div class="container toping">

  <% if @companies.exists? %>
  <div class="row">
    <div class="col-md-3">

      <% @companies.each do |c| %>

      <div class="card">
        <%= link_to company_path(c) do %>
          <%= attachment_image_tag c, :company_image, fallback: "no_image.jpg", size:"200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body row">
            <strong class="card-title ">
              <%= link_to company_path(c) do %>
                <%= c.company_name %>
              <% end %>
            </strong>
          </div>
        </div>

          <p class="card-text">
            <%= c.introduction %>
          </p>

        </div>
      </div>
      <% end %>
    </div>
  </div>
  <% else %>
  <div class="blank">
    <h5>現在、登録している企業はありません。</h5>
    <h5>Currently, there are no companies.</h5>
  </div>
  <% end %>
</div>