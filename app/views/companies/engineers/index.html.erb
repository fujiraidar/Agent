

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <% @engineers.each do |e| %>

      <div class="card">
        <%= link_to user_path(e) do %>
          <%= attachment_image_tag e, :profile_image, fallback: "no_image.jpg", size:"200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body row">
          <div class="col-md-8">
            <strong class="card-title ">
              <%= link_to user_path(e) do %>
                <%= e.surname %> <%= e.name %>
              <% end %>
            </strong>
          </div>
          <div class="col-md-4">
            <%= e.age %>歳
          </div>
        </div>


        <% e.languages.each do |l| %>

          <p class="card-text">
            <div class="row">
              <div class="col-md-5">
                <%= l.language %>
              </div>
              <div class="col-md-5">
                <%= l.experience_year %>年
              </div>
            </div>
          </p>
        <% end %>

        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>