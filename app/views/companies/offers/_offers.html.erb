

<% if offers.exists? %>

<table class="table table-hover table-sm">

    <% offers.each do |o| %>

    <tr>
		<td>
			<div class="info_created_at">
			    <%= link_to company_path(o.company) do %>
			    	<%= o.company.company_name %>
			    <% end %>
			    	が<%= o.created_at.strftime('%Y/%m/%d') %>にオファー　to　
			    <%= link_to engineer_path(o.engineer) do %>
			    	<%= o.engineer.surname %> <%= o.engineer.name %>さん
			    <% end %>
		    </div>
			<%= link_to offer_path(o) do %>
			  <div class="index-title">
			    <%= o.title %>
			  </div>
			<% end %>
			<div class="info_created_at tag">
		    	<%= o.status %> <%= o.salary %>
		    </div>
		</td>
	</tr>
    <% end %>
</table>

<% else %>

	<div class="toping">
	    <h5 class="toping gocenter">There are no offers</h5>
	</div>

<% end %>