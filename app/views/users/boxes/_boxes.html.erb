

<% if @boxes.exists? %>

    <% @boxes.each do |b| %>

    <% c = Company.find_by(id: b.company_id) %>

    <table class="table table-hover table-sm">
      <tr class="row">
        <td class="col-1">
          <%= link_to company_path(c) do %>
            <%= attachment_image_tag c, :company_image, fallback: "no_image.jpg", size:"70x70"%>
          <% end %>
        </td>
        <td class="col-3">
          <%= link_to company_path(c) do %>
            <strong><%= c.company_name %></strong>
          <% end %><br /><br />
          <%= link_to "チャット再開",box_path(b) %>
        </td>
        <td class="col-8">
          <%= c.introduction %>
        </td>
      </tr>
    </table>

    <% end %>

  <%= paginate @boxes %>

  <% else %>
  	<div class="toping">
	    <h5 class="toping gocenter">There are no messagees</h5>
	</div>
  <% end %>