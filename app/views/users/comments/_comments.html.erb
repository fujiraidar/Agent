

<div class="toping">
	<strong>コメント</strong>
</div>

<% @comments.each do |c| %>


    <%= link_to user_path(c.user) do %>
    <div class="comment_name">
    	<div class="row">
    	<div class="col-8">
	        <%= c.user.name %>
	    </div>
	    <div class="col-4">
	    	<%= c.created_at.strftime('%Y/%m/%d %H:%M') %>
	    </div>
		</div>
	</div>
	<% end %>
	<div class="max-area">
		<%= text_url_to_link(simple_format(c.comment)).html_safe %><br />
	</div><br />
<% end %>