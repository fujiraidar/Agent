

<div class="container clearfix toping whiting">


    <%= form_for @engineer, url: engineer_path(@engineer), method: :patch do |f| %>

    <%= render 'layouts/error_messages', model: f.object %>

    <div class="row">

      <div class="col-md-4">
        <div class="form-group">
          <%= attachment_image_tag @engineer, :profile_image, fallback: "no_image.jpg", size:"250x250" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group row">
          <div class="col-md-6">
            <%= f.label :姓 %><br />
            <%= f.text_field :surname, class: "col-md-12" %>
          </div>
          <div class="col-md-6">
            <%= f.label :名 %><br />
            <%= f.text_field :name, class: "col-md-12" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :年齢 %><br />
            <%= f.number_field :age, placeholder:" 20",min: 1, max:100, class: "col-md-8" %>歳
          </div>
          <div class="col-md-7">
            <%= f.label :オファー %><br />
            <%= f.select :offer, Engineer.offers.keys.to_a, include_blank: "選択して下さい" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "更新する", class: "btn-lg btn-primary col-md-5" %>
        </div>
      </div>

      <div class="col-md-7 offset-md-1">
        <div class="form-group">
          <%= f.label :自己紹介文 %><br />
          <%= f.text_area :introduction, class: "col-md-12"%>
        </div>
          <%= render 'form', f: f %>
          <%= f.hidden_field :rank, value: "F" %>

      </div>
    <% end %>
</div>
</div>
