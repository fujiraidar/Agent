



<div class="container clearfix">

  <h2>エンジニア登録</h2>

    <%= form_for @engineer, url: engineers_path, method: :post do |f| %>

    <div class="row">

      <div class="col-md-4">
        <div class="form-group">
          <%= attachment_image_tag @engineer, :profile_image, fallback: "no_image.jpg", size:"200x200" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group row">
          <div class="col-md-6">
            <%= f.label :姓 %><br />
            <%= f.text_field :surname, class: "col-md-12" %>
          </div>
          <div class="col-md-6">
            <%= f.label :名 %><br />
            <%= f.text_field :name, class: "col-md-12" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-5">
            <%= f.label :年齢 %><br />
            <%= f.number_field :age, value: 20, class: "col-md-8" %>歳
          </div>
          <div class="col-md-7">
            <%= f.label :オファー %><br />
            <%= f.select :offer, Engineer.offers.keys.to_a, include_blank: "選択して下さい" %>
          </div>
        </div>
      </div>

      <div class="col-md-7 offset-md-1">
        <div class="form-group">
          <%= f.label :自己紹介文 %><br />
          <%= f.text_area :introduction, class: "col-md-12"%>
        </div>
          <%= render 'form', f: f %>
          <%= f.hidden_field :rank, value: "F" %>

        <div class="form-group">
          <br />
          <br />
          <%= f.submit "エンジニア登録する", class: "btn-lg btn-primary col-md-12" %>
        </div>
      </div>
    <% end %>
</div>
