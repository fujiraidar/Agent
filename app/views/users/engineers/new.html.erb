

<h2>エンジニア登録</h2>

<div class="container clearfix">


        <%= form_for @engineer, url: user_engineers_path, method: :post do |f| %>


        <div class="row">

          <div class="col-md-4">
            <%= attachment_image_tag @engineer, :profile_image, fallback: "no_image.jpg", size:"300x300" %>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            <%= f.label :offer（受け取る・受け取らない） %>
            <%= f.select :offer, Engineer.offers.keys.to_a, include_blank: true %>
          </div>

          <div class="col-md-4">
            <%= f.label :introduction %><br>
            <%= f.text_area :introduction %><br>
          </div>

          <div class="col-md-4">
          	<%= render 'form', f: f %><br>

          	<%= f.hidden_field :rank, value: "F" %>

            <%= f.submit "登録", class:"btn-lg btn-primary " %>
          </div>

        </div>

        <% end %>

</div>
