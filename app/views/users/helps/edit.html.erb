

<div class="container_info toping">

<%= form_for @help, url: help_path(@help), method: :patch do |f| %>

  <div class="form-group">
  	<%= f.text_field :title, placeholder: "ヘルプのタイトル (サイズは、見出し 1)" %>
  	<%= f.text_field :language, placeholder: "言語" %>
  </div>
  <div class="form-group">

		<%= f.text_area :body, 'data-provider': :summernote, src: "./js/summernote/lang/summernote-ja-JP.js" %>
  </div>

  <div class="form-group row">
  	<div class="col-md-2 offset-md-10">
  		<%= f.submit "更新する", class: "btn btn-success" %>
  	</div>
  </div>

<% end %>
</div>
