
<div class="container">
<table class="table table-hover table-sm">

    <% @helps.each do |h| %>

    <tr>
        <td>
            <p><%= h.user.name %>が<%= h.created_at.strftime('%Y/%m/%d') %>にヘルプ</p>
            <%= link_to help_path(h) do %>
                <p><%= h.title %></p>
            <% end %>
            <p><%= h.language %></p>
        </td>
        <td></td>
    </tr>

    <% end %>

</table>
</div>
