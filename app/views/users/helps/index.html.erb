
<div class="container">
<table class="table table-hover table-sm">

    <% @helps.each do |h| %>

    <tr>
        <td>
            <div class="info_created_at">
                <%= link_to user_path(h.user) do %>
                    <%= h.user.name %>
                <% end %>
                    が<%= h.created_at.strftime('%Y/%m/%d') %>にヘルプ
            </div>
            <%= link_to help_path(h) do %>
                <%= h.title %>
            <% end %>
            <div class="info_created_at tag">
                <%= h.language %>
            </div>
        </td>
        <td>
            <% if h.user.id == current_user.id %>
                <%= link_to "編集", edit_help_path(h) %>
            <% end %>
        </td>
    </tr>

    <% end %>

</table>
</div>
