

<h2>記事</h2>

<%= form_for @info, url: info_path , method: :post do |f| %>

<div class="field row">
  <label>プログラミング言語</label>
	<%= f.text_field :language ,class: "col-xs-12" %>
</div>

　<label>タイトル</label>
	<%= f.text_field :title ,class: "col-xs-12" %>

　<label>本文</label>
	<%= f.text_area :body ,class: "col-xs-12" %>

	<%= f.submit "更新する" %>

	<%= link_to "戻る", info_path(@info) %>

	<%= link_to "記事の一覧へ", infos_path %>


<% end %>