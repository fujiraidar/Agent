
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">

	<div class="row">

		<div class="col-2 toping sideright">
			<%= render 'layouts/sidebar' %>
		</div>

		<div class="col-10 whiting toping">


			<%= search_form_for @q_info, url: infos_path, remote: true do |f| %>

				<div class="search_field">
				    <%= f.text_field :title_or_body_or_tags_name_cont_any %>
					<%= button_tag :type => "submit", class: "btn btn-default btn-s-md s-button" do %>
					    <i class="fa fa-search"></i>
					<% end %>
				</div>
			<% end %>

			<div class='info container'>
		    	<%= render 'users/infos/infos', infos: @infos %>
			</div>

		</div>
	</div>
</div>

