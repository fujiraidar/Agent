

<% if marks.exists? %>

<table class="table table-hover table-sm toping">

	<% marks.each do |m| %>

	<% c = Company.find_by(id: m.company_id) %>

    <tr class="row">
		<td class="col-md-1"><%= attachment_image_tag c, :company_image, fallback: "no_image.jpg", size:"60x60" %></td>
		<td class="col-md-10">
			<div class="info_created_at">
				<%= m.created_at.strftime('%Y/%m/%d') %>にマークしました。
			</div>
			<%= link_to company_path(c) do %>
			  <div class="index-title">
			    <%= c.company_name %>
			  </div>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
<%= paginate marks %>

<% else %>

<strong>no mark</strong>

<p>マークがありません</p>

<% end %>