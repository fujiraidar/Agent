

<div class='tabs'>
  <div class='tab-buttons'>
    <span class='content1'>記事</span>
    <span class='content2'>ランキング</span>
    <span class='content3'>ヘルプ</span>
    <div id='lamp' class='content1'></div>
  </div>
  <div class='tab-content'>

    <div class='content1'>
    	<div class="container toping">
		<table class="table table-hover table-sm">

			<% @infos.each do |i| %>

			<tr class="row">
				<td class="col-md-1"><%= attachment_image_tag i.engineer, :profile_image, fallback: "no_image.jpg", size:"65x65" %></td>
				<td class="col-md-10">
					<div class="info_created_at">
						<%= link_to user_path(i.engineer) do %>
					    	<%= i.engineer.user.name %>
					    <% end %>
					        が<%= i.created_at.strftime('%Y/%m/%d') %>に投稿
					</div>
					<%= link_to info_path(i) do %>
					    <%= i.title %>
					<% end %>
					<div class="info_created_at tag">
				    	<%= i.language %>
				    </div>
				</td>
				<td class="col-md-1">
					<div class="info_created_at">
						<%= i.favorites_count %>
					</div>
					<% if i.engineer.id == current_user.id %>
			            <%= link_to "編集", edit_info_path(i) %>
			        <% end %>
			    </td>
			</tr>

			<% end %>

		</table>
		</div>
    </div>

    <div class='content2'>
    	<div class="container toping">
		<table class="table table-hover table-sm">

			<% @infos.each do |i| %>

			<tr class="row">
				<td class="col-md-1"><%= attachment_image_tag i.engineer, :profile_image, fallback: "no_image.jpg", size:"65x65" %></td>
				<td class="col-md-10">
					<div class="info_created_at">
						<%= link_to user_path(i.engineer) do %>
					    	<%= i.engineer.user.name %>
					    <% end %>
					        が<%= i.created_at.strftime('%Y/%m/%d') %>に投稿
					</div>
					<%= link_to info_path(i) do %>
					    <%= i.title %>
					<% end %>
					<div class="info_created_at tag">
				    	<%= i.language %>
				    </div>
				</td>
				<td class="col-md-1">
					<div class="info_created_at">
						<%= i.favorites_count %>
					</div>
					<% if i.engineer.id == current_user.id %>
			            <%= link_to "編集", edit_info_path(i) %>
			        <% end %>
			    </td>
			</tr>

			<% end %>

		</table>
		</div>
    </div>

    <div class='content3'>
    	<div class="container toping">
		<table class="table table-hover table-sm">

		    <% @helps.each do |h| %>

		    <tr>
		        <td>
		            <div class="info_created_at">
		                <%= link_to user_path(h.user) do %>
		                    <%= h.user.name %>
		                <% end %>
		                    が<%= h.created_at.strftime('%Y/%m/%d') %>にヘルプ
		            </div>
		            <%= link_to help_path(h) do %>
		                <%= h.title %>
		            <% end %>
		            <div class="info_created_at tag">
		                <%= h.language %>
		            </div>
		        </td>
		        <td>
		            <% if h.user.id == current_user.id %>
		                <%= link_to "編集", edit_help_path(h) %>
		            <% end %>
		        </td>
		    </tr>

		    <% end %>

		</table>
		</div>

    </div>

  </div>
</div>
