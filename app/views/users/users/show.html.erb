

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container whiting">
<div class="toping">
<div class="row">

  <div class="col-12 col-lg-3">

	<table class="table">

		<tr>
			<th class="username"><%= @user.name %></th>
		</tr>

		<tr>
			<th class="info_created_at tag"><%= @user.email %></th>
		</tr>

		<% if Engineer.find_by(id: @user) %>
			<tr>
				<th><%= link_to "AgentPage", engineer_path(@user), data: {"turbolinks" => false} %></th>
			</tr>
		<% end %>

		<% if user_signed_in? %>
			<% if @user == current_user %>
				<tr>
					<th><div class="draft_link col-7 offset-5"><%= link_to "User Chat Room", users_path %></div></th>
				</tr>
				<tr>
					<th>
						<%= form_for @user, url: user_path, method: :patch do |f| %>
						<%= f.text_field :name %>
						<%= f.submit "ok", 'data-toggle' => "tooltip", 'data-placement'=>"bottom", title:"ユーザーネームの変更" %>
						<% end %>
					</th>
				</tr>
			<% end %>
		<% end %>

    </table>
  </div>


  <div class="col-12 col-lg-9">

		<div class='tabs'>
		  <div class='tab-buttons'>
		    <span class='content1'>ヘルプ</span>
		    <span class='content2'>いいね</span>
		    <span class='content3'>フォロー</span>
		    <div id='lamp' class='content1'></div>
		  </div>
		  <div class='tab-content'>

		    <div class='content1'>
		    	<%= render 'users/helps/helps_search', helps: @helps %>
	        </div>

	        <div class='content2'>
	        	<%= render 'users/favorites/favorites', favorites: @favorites %>
	        </div>

	        <div class='content3'>
	        	<%= render 'users/follows/follows', follows: @follows %>
	        </div>

	      </div>
		</div>

  </div>
</div>
</div>
</div>




